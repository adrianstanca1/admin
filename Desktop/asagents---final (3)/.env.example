# ==============================================
# ASAgents Construction Management Platform
# Environment Configuration - Example Template
# ==============================================
# Copy this file to .env.local and fill in your actual values

# ======================
# AI Service API Keys
# ======================
GEMINI_API_KEY=your-gemini-api-key-here
VITE_GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_GENERATIVE_LANGUAGE_API_KEY=your-gemini-api-key-here

# OpenAI Configuration (optional)
VITE_OPENAI_API_KEY=sk-your-openai-api-key-here

# Claude/Anthropic Configuration (optional)
VITE_ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
VITE_CLAUDE_API_KEY=sk-ant-your-anthropic-api-key-here
VITE_AI_MODEL=claude-3-5-sonnet-20241022
VITE_PRIMARY_AI_PROVIDER=anthropic

# ======================
# GitHub OAuth Configuration
# ======================
VITE_GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_PRIVATE_KEY_SHA256=your-github-private-key-sha256

# Google OAuth Configuration
VITE_GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ======================
# Supabase Configuration
# ======================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Supabase Database URLs
DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres
DIRECT_URL=postgresql://postgres:your-password@pooler.supabase.com:5432/postgres

# ======================
# IONOS Deployment Configuration
# ======================
IONOS_ACCOUNT_ID=your-ionos-account-id
DEPLOY_SERVER=your-deploy-server.webspace-host.com
DEPLOY_USERNAME=your-deploy-username
DEPLOY_PASSWORD=your-deploy-password
DEPLOY_PORT=22
DEPLOY_PROTOCOL=SFTP

# ======================
# Additional Service Keys
# ======================
PUBLISHABLE_KEY=your-publishable-key
SECRET_KEY=your-secret-key

# ======================
# Backend Configuration
# ======================
NODE_ENV=development
PORT=5001

# JWT Authentication
JWT_SECRET=your-256-bit-secret-key-change-in-production
JWT_ISSUER=asagents-api
JWT_AUDIENCE=asagents-client

# ======================
# API URLs
# ======================
VITE_API_URL=http://localhost:5001
VITE_API_BASE_URL=http://localhost:5001
VITE_BACKEND_URL=http://localhost:5001
VITE_WS_URL=ws://localhost:5001/ws

# ======================
# Database
# ======================
DATABASE_PATH=./database.sqlite

# ======================
# CORS Configuration
# ======================
CORS_ORIGIN=http://localhost:5173,http://localhost:4002,http://localhost:3000

# ======================
# Optional Features
# ======================
LOG_LEVEL=info
DEBUG=false
DEBUG_MODE=false
ANALYTICS_ENABLED=true
VAPID_PUBLIC_KEY=your-vapid-public-key
