# ASAgents Backend - Production Environment Configuration

# Application Environment
NODE_ENV=production
ENVIRONMENT=production

# Server Configuration
PORT=5001
HOST=0.0.0.0

# Database Configuration (SQLite)
DATABASE_PATH=/app/data/database.sqlite
DATABASE_BACKUP_PATH=/app/backups

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production-must-be-same-as-frontend
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com,https://api.yourdomain.com

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,txt

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/app/logs/backend.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000
WS_PING_INTERVAL=25000
WS_PONG_TIMEOUT=5000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Performance Configuration
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
CACHE_CONTROL_MAX_AGE=86400

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true

# Monitoring Configuration
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true
ERROR_TRACKING=true

# SSL Configuration (if terminating SSL at backend)
SSL_ENABLED=false
SSL_CERT_PATH=/app/ssl/cert.pem
SSL_KEY_PATH=/app/ssl/key.pem

# Process Configuration
CLUSTER_MODE=false
MAX_MEMORY=512M
GRACEFUL_SHUTDOWN_TIMEOUT=10000

# Request Configuration
REQUEST_TIMEOUT=30000
BODY_LIMIT=10mb
PARAMETER_LIMIT=1000

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production
SESSION_MAX_AGE=86400000
SESSION_SECURE=true
SESSION_HTTP_ONLY=true

# API Configuration
API_VERSION=v1
API_PREFIX=/api
API_RATE_LIMIT=true

# Development/Debug (disabled in production)
DEBUG_MODE=false
VERBOSE_LOGGING=false
STACK_TRACE_ENABLED=false
